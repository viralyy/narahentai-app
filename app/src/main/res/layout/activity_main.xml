<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0F">

    <!-- Top App Bar (simple, YouTube-ish) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#0B0B0F">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Narahentai"
            android:textColor="#F3F4FF"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:tint="#F3F4FF"
            android:src="@android:drawable/ic_popup_sync"
            android:contentDescription="Refresh"/>
    </LinearLayout>

    <!-- Loading progress tipis -->
    <ProgressBar
        android:id="@+id/pageProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="gone"/>

    <!-- WebView (konten web) -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="@dimen/bottom_nav_height" />

    <!-- Bottom Navigation (✅ bigger like YouTube) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        android:background="#0B0B0F"
        app:itemIconSize="@dimen/bottom_nav_icon_size"
        app:itemTextAppearanceActive="@style/BottomNavYouTube"
        app:itemTextAppearanceInactive="@style/BottomNavYouTube"
        app:itemIconTint="#F3F4FF"
        app:itemTextColor="#F3F4FF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

    <!-- Player BottomSheet (✅ naik setinggi bottom nav supaya gak ketutup) -->
    <LinearLayout
        android:id="@+id/playerSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/bottom_nav_height"
        android:orientation="vertical"
        android:background="#0B0B0F"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Mini bar (YouTube style) -->
        <LinearLayout
            android:id="@+id/miniBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/miniThumb"
                android:layout_width="96dp"
                android:layout_height="54dp"
                android:scaleType="centerCrop"
                android:background="#151520" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/miniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Video"
                    android:textColor="#F3F4FF"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/miniSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Narahentai"
                    android:textColor="#A6A7C2"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:tint="#F3F4FF"
                android:src="@android:drawable/ic_media_pause"
                android:contentDescription="Play/Pause"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:tint="#F3F4FF"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close"/>
        </LinearLayout>

        <!-- Player native -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:use_controller="true" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
